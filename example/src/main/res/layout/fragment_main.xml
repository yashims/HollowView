<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.yashims85.example.hollowview.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <!--
    <me.yashims85.hollowview.OvalHollowView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0000000"
        app:touchThrough="true"
        />
        -->
    <View
        android:id="@+id/view_dummy_top"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#ff0000"
        android:layout_alignParentTop="true"
        />
    <View
        android:id="@+id/view_dummy_bottom"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#ff0000"
        android:layout_alignParentBottom="true"
        />
    <View
        android:id="@+id/view_dummy_left"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/view_dummy_bottom"
        android:layout_below="@id/view_dummy_top"
        />
    <View
        android:id="@+id/view_dummy_right"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:layout_alignParentRight="true"
        android:layout_above="@id/view_dummy_bottom"
        android:layout_below="@id/view_dummy_top"
        />
    <me.yashims85.hollowview.OvalHollowView
        android:id="@+id/view_hollow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_dummy_bottom"
        android:layout_below="@id/view_dummy_top"
        android:layout_toLeftOf="@id/view_dummy_right"
        android:layout_toRightOf="@id/view_dummy_left"
        android:background="#55000000"
        />
</RelativeLayout>
